            android:name=".VerReporte"
            android:label="@string/detalles_de_reporte" />
        <activity
            android:name=".NuevoReporte"
            android:label="@string/nuevo_reporte" />
        <activity
            android:name=".ListaReportes"
            android:label="@string/reportes_de_mantenimiento" />

        <activity
            android:name=".verOperador"
            android:label="@string/title_activity_ver_operador"
