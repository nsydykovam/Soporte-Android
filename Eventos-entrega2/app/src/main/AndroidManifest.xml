        <activity
            android:name=".verGerente"
            android:label="@string/title_activity_ver_gerente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".verReporteAbierto" />
        <activity android:name=".verReporteCerrado" />
        <activity android:name=".verReporteMantenimiento" />
        <activity android:name=".verReporteSolucionado" />
